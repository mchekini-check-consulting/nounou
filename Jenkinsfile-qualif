node("ci-node") {
    stage("checkout") {
        checkout([$class: 'GitSCM', branches: [[name: '*/develop']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/mchekini-check-consulting/nounou-ui.git']]])
    }

    stage("build") {
        sh "npm install"
        sh "ng build --configuration production"
    }

    stage("build docker image") {
        sh "sudo docker build -t nounou-ui-qua ."
    }

    stage("Push image to Docker hub") {
        sh "sudo docker login -u mchekini -p jskabyliE"
        sh "sudo docker tag nounou-ui-qua mchekini/nounou-ui-qua:1.0"
        sh "sudo docker push mchekini/nounou-ui-qua:1.0"
    }

    node("qualif-node") {
        stage("deploy") {
            try{
                sh "sudo docker stop nounou-ui"
                sh "sudo docker rm nounou-ui"
                sh "sudo docker rmi mchekini/nounou-ui-qua:1.0"
            }catch(Exception e){
                println "Aucun conteneur avec le nom nounou-ui n'est pr√©sent"
            }
            sh "sudo docker run --name nounou-ui -p 80:80 -d mchekini/nounou-ui-qua:1.0"
        }
    }
}
